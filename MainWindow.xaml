<Window x:Class="NiceWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nice Window" Height="300" Width="300"
        KeyUp="window_KeyUp" KeyDown="window_KeyDown">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Name="textbox1" Height="240"
                 VerticalScrollBarVisibility="Auto" 
                 TextWrapping="Wrap" 
                 IsReadOnly="True"></TextBox>
            <Button Name="startButton" Width="100"
                    Click="startButton_Clicked">Start</Button>
        </StackPanel>
    </Grid>
</Window>
