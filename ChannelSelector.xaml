<Window x:Class="NiceWindow.ChannelSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Select Channel" Height="300" Width="300"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel>
        <ListView Name="listView" Height="230"
                  ItemsSource="{Binding Channels}"
                  SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" Header="Channel #"
                                    DisplayMemberBinding="{Binding i_ChannelNumber}"/>
                    <GridViewColumn Width="150" Header="Instrument"
                                    DisplayMemberBinding="{Binding s_Instrument}"/>
                </GridView>
            </ListView.View>            
        </ListView>
        <Button HorizontalAlignment="Right" Name="okButton" 
                Margin="0,5,0,0" Width="100" Content="OK"/>
    </StackPanel>
</Window>
