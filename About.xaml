<Window x:Class="NiceWindow.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About NiceWindow" Height="300" Width="500"
        ResizeMode="NoResize"
        Topmost="True" ShowInTaskbar="False">
    <Grid>
        <Canvas Name="canv">
            <Canvas.Background>
                <ImageBrush ImageSource="Images/Banner.png" Stretch="UniformToFill"></ImageBrush>
            </Canvas.Background>
            <Button Name="close" Width="100" Height="30" 
                    Canvas.Right="10" Canvas.Bottom="10"
                    Click="close_Click">Close</Button>
        </Canvas>
    </Grid>
</Window>
